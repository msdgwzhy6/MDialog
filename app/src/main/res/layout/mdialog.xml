<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/dialog_background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLines="2"
        android:minHeight="@dimen/dp44"
        tools:text="标题" />


    <View
        android:id="@+id/heng_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:layout_below="@+id/txt_title" />

    <View
        android:id="@+id/shu_line"
        android:layout_width="@dimen/dp1"
        android:layout_height="@dimen/dp44"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/txt_left"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp44"
        android:layout_alignBottom="@+id/shu_line"
        android:layout_toLeftOf="@+id/shu_line"
        android:layout_toStartOf="@+id/shu_line"
        android:gravity="center"
        tools:text="确定" />


    <TextView
        android:id="@+id/txt_right"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp44"
        android:layout_alignBottom="@+id/shu_line"
        android:layout_toEndOf="@+id/shu_line"
        android:layout_toRightOf="@+id/shu_line"
        android:gravity="center"
        tools:text="取消" />


</RelativeLayout>